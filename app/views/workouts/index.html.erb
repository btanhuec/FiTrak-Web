
<body>
  <div class = "workouts__title lfont">
    MY WORKOUTS
  </div>

  <div class="workouts__container lfont">
    <% @workouts.each do |workout| %>
      <% workout.excercises.each do |excercise| %>
        <span><%= excercise.title %></span>
      <%end%>
    <div class="workouts__wrap hvr-grow">
      <div class="workouts__card --noborder">
          <%= workout.name%>
      </div>
      <div class="workouts__card">
        <div class="workouts__left">
          <%= workout.description %>
        </div>
        <div class="workouts__divider">
          <div class="workouts__triangle">

          </div>
        </div>
        <div class="workouts__right">

          <div class="workouts__icons__row">
            <%= link_to '<i class="far fa-eye"></i>'.html_safe, workout, :class => "icon_link" %><br>
            <%= link_to '<i class="fas fa-pen-square"></i>'.html_safe, edit_workout_path(workout), :class => "icon_link" %><br>
            <%= link_to '<i class="fas fa-minus-square"></i>'.html_safe, workout, method: :delete, data: { confirm: 'Are you sure?' }, :class => "icon_link" %><br>
          </div>
        </div>
      </div>
    </div>

    <% end %>
  </div>


<br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workouts.each do |workout| %>
      <tr>
        <td><%= workout.name %></td>
        <td><%= workout.description %></td>
        <td><%= workout.user_id %></td>
        <td><%= link_to 'Show', workout %></td>
        <td><%= link_to 'Edit', edit_workout_path(workout) %></td>
        <td><%= link_to 'Destroy', workout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Workout', new_workout_path %>
</body>
