<p id="notice"><%= notice %></p>


<div class="myprofile__card overlay-light afont" style="color: white">
<%= link_to 'Make A Profile', new_profile_path%><br>
  <% @profiles.each do |profile| %>
    <% if (profile.user_id == current_user.id) %>
      <div class="myprofile__card__edit">
        <%= link_to '<i class="fas fa-user-edit"></i> Edit Profile'.html_safe, edit_profile_path(profile) %>
      </div>
    <div class="profile__header">
      <div class="header__title">
        Your Profile Page
      </div>
      <div class="header__subtitle">
        (This will be the information potential clients will see!)
      </div>
    </div>
    <div class="myprofile__field__container">
      <div class="myprofile__field">
        Username: <%= profile.username %>
      </div>
    </div>
    <div class="myprofile__field__container">
      <div class="myprofile__field">
        Name: <%= profile.first_name %> <%= profile.last_name %>
      </div>  
    </div>
    <div class="myprofile__field__container">
      <div class="myprofile__field">
        Email: <%= profile.email %>
      </div>
    </div>
    <div class="myprofile__field__container">
      <div class="myprofile__field">
        Age: <%= profile.age %>
      </div>
    </div>
    <div class="myprofile__field__container">
      <div class="myprofile__field">
        Gender: <%= profile.gender %>
      </div>
    </div>
    <div class="myprofile__field__container">
      <div class="myprofile__field">
          Years Of Experience: <%= profile.experience %>
      </div>
    </div>
    <div class="myprofile__field__container">
      <div class="myprofile__field">
        About Me: <%= profile.about_me %>
      </div>
    </div>
    <%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %> <br>
    <%= link_to 'Make A Profile', new_profile_path%><br>
    <% end %>
  <% end %>
</div>
