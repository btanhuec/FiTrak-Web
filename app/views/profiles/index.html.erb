<p id="notice"><%= notice %></p>

<h1>Profiles</h1>
<%= current_user.email%>
<div class="myprofile__card overlay-light lfont">
  <% @profiles.each do |profile| %>
    <% if (profile.user_id == current_user.id) %>
    <div class="myprofile__title">
      <div class="myprofile__field">
        Name:
      </div>
      <%= profile.first_name %>
      <%= profile.last_name %>
    </div>
    <div class="myprofile__field__container">
      <div class="myprofile__field">
        Age:
      </div>
      <%= profile.age %>
    </div>
    <div class="myprofile__field__container">
      <div class="myprofile__field">
        Gender:
      </div>
      <%= profile.gender %>
    </div>
    <div class="myprofile__field__container">
      <div class="myprofile__field">
          Years Of Experience:
      </div>
      <%= profile.experience %>
    </div>
    <div class="myprofile__field__container">
      <div class="myprofile__field">
        About Me:
      </div>
      <%= profile.about_me %>
    </div>
    <% end %>
  <% end %>
</div>
